<h1>Our best Black 'n White's Cocktails</h1>
<div class="container">
  <% @cocktails.each do |cocktail| %>
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <div class="card"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                 url('<%= photo_path_for(cocktail) %>')">
          <div class="card-category"></div>
          <div class="card-description">
            <%= cocktail.name %>
          </div>
          <a class="card-link" href="#" ></a>
        </div>
      </div>
    </div>
  <p class="card-links"><%= link_to "See more", cocktail_path(cocktail) %></p>
  <% end %>
</div>
  <p class="card-links"><%= link_to "Add a new Cocktail", new_cocktail_path %></p>

